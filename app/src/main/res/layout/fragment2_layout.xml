<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/projetologo2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:textColor="#21550E"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pergunte alguma coisa:"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="23sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_customs"
            android:hint="Pergunte alguma coisa"
            android:layout_margin="10dp"
            android:padding="15dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_customs2"
            android:textColor="#FFFFFFFF"
            android:layout_margin="5dp"
            android:layout_marginTop="40sp"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:text="Perguntar"/>

    </LinearLayout>


</ScrollView>