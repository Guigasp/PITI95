<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    android:orientation="vertical"
    tools:context=".Login_activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="147dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:foregroundGravity="center_horizontal"
        android:padding="10dp"
        android:src="@drawable/projetologo2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/usuario"
        android:id="@+id/usuario"
        android:textColor="#21550E"
        android:textSize="23sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textusu"
        android:layout_width="match_parent"
        android:drawableStart="@drawable/ic_email"
        android:layout_height="wrap_content"
        android:background="@drawable/input_customs"
        android:layout_margin="5dp"
        android:drawablePadding="12dp"
        android:hint="Usuario"
        android:padding="15dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tsenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/senha"
        android:textColor="#21550E"
        android:textSize="23sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textsenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="12dp"
        android:background="@drawable/input_customs"
        android:hint="Senha"
        android:drawableStart="@drawable/ic_lock"
        android:layout_margin="2dp"
        android:padding="15dp"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="35sp"
            android:background="@drawable/button_customs"
            android:layout_weight="1"
            android:text="Entrar" />

        <Button
            android:id="@+id/btnSair"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_margin="10sp"
            android:layout_marginTop="35sp"
            android:layout_weight="1"
            android:background="@drawable/button_customs"
            android:text="Cadastre" />


    </LinearLayout>

</LinearLayout>