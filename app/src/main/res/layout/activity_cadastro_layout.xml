<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    android:orientation="vertical"
    tools:context=".Cadastro_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/projetologo2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textColor="#21550E"
            android:layout_margin="3dp"
            android:textSize="19dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:padding="10dp"
            android:layout_margin="3dp"
            android:background="@drawable/input_customs"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite seu nome"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sobrenome:"
            android:textColor="#21550E"
            android:layout_margin="3dp"
            android:textSize="19dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:padding="10dp"
            android:background="@drawable/input_customs"
            android:layout_margin="3dp"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Sobrenome"
            android:inputType="textPersonName" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:textColor="#21550E"
            android:layout_margin="3dp"
            android:textSize="19dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:padding="10dp"
            android:background="@drawable/input_customs"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha:"
            android:textColor="#21550E"
            android:layout_margin="3dp"
            android:textSize="19dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextTextPassword2"
            android:padding="10dp"
            android:background="@drawable/input_customs"
            android:layout_width="266dp"
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirme senha:"
            android:textColor="#21550E"
            android:layout_margin="3dp"
            android:textSize="19dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextTextPassword3"
            android:padding="10dp"
            android:background="@drawable/input_customs"
            android:layout_width="265dp"
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Confimar senha"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CEP:"
            android:textColor="#21550E"
            android:layout_margin="3dp"
            android:textSize="19dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextTextPostalAddress"
            android:background="@drawable/input_customs"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="CEP"
            android:layout_margin="3dp"
            android:inputType="textPostalAddress"
            android:padding="10dp" />

        <Button
            android:id="@+id/button"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:background="@drawable/button_customs"
            android:text="CADASTRAR" />




    </LinearLayout>


</ScrollView>